@{
    Layout = "~/_Layout.cshtml";
}

<form data-abide novalidate method="get" action="~/AddProduct.cshtml">
    <div class="grid-x grid-margin-x">
        <div class="cell">
            <div data-abide-error class="alert callout" style="display: none;">
                <p><i class="fi-alert"></i> There are some errors in your form.</p>
            </div>
        </div>
    </div>
    <div class="grid-x grid-margin-x">
        <div class="cell small-12">
            <label>
                User Name
                <input name="username" type="text" placeholder="Login" aria-describedby="exampleHelpTex" data-abide-ignore>
            </label>
        </div>
        <div class="cell small-12">
            <label>
                Password
                <input name="password" type="password" id="password" placeholder="yeti4preZ" aria-describedby="exampleHelpText" required>
                <span class="form-error">
                    I'm required!
                </span>
            </label>
            <p class="help-text" id="exampleHelpText">Enter a password please.</p>
    <div class="grid-x grid-margin-x">
        <fieldset class="cell medium-6">
            <button class="button" type="submit" value="Submit">Submit</button>
        </fieldset>
        <fieldset class="cell medium-6">
            <button class="button" type="reset" value="Reset">Reset</button>
        </fieldset>
    </div>
</form>